{% extends 'base.html.twig' %}

{% block title %}Hello StudentController!{% endblock %}

{% block body %}
<center><h1>StudentController</h1></center>
   <Center> <a class="btn btn-danger" href="{{ path('student_add')}}">Add Student</a></center>
<div class=\"container\">
    <h3 class=\"panel-title\">Student List</h3>
    <table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th> 
        <th>Image</th>
        <th>Phone</th>
        <th>Course</th>
        <th>Action</th>
       
    </tr>
        {% for student in students %}
        <tr>
            <td>{{ student.id }}</td>
            <td>{{ student.name }}</td>
            <td><img src="{{student.image}}" width = 100 height=100></td>
            <td>{{ student.phone }}</td>
            <td>
                {% if student.course != null %}
                        <a class="text text-success text-decoration-none" href="{{path('course_index', {'id':student.course.id})}}">
                            {{ student.course.name }}
                        </a>   
                {% endif %}
            </td>
            
            <td>
                <a class="btn btn-outline-primary" href="{{ path('student_edit', {'id' : student.id }) }}">EDIT</a>
                <a  class="btn btn-outline-warning" href="{{ path('student_delete', {'id' : student.id}) }}"
                onclick="return confirm('Do you want to delete this student ?');">delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
