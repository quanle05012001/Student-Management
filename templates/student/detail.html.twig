{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 text-center">
   <h2 class="text-success mb-3"> {{ student.name }} </h2>
   <div class="row">
      <div class="col">
         <img src="{{ student.image}}" width=200 height=200>
      </div>
      <div class="col">
         <h5 class="text-info">Phone: {{ student.phone }}</h5>
         <h5 class="text-warning">Course: 
            {% if student.course != null %}
               <a class="text text-success" href="{{ path('course_detail' , {'id' : student.course.id})}}">
                  {{ student.course.name }}
               </a>             
            {% endif %}
        </h5>
         <h5 class="text-secondary">DOB: {{ student.dob | date('d/m/Y') }} $ </h5>
      </div>
   </div>
</div>
{% endblock %}