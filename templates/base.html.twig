<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>
        {% block title %} STD Management
        {% endblock %}
    </title>
    {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    {% endblock %}
</head>
<body>
     {# navigation bar #}
        {% block nav %}
        <ul class="nav justify-content-center|justify-content-end">
            <h1><li class="nav-tabs">
                <a class="nav-link" href="{{ path('home')}}">Home</a>
            </li></h1>
            <h1><li class="nav-tabs">
                <a class="nav-link" href="{{ path('student_index')}}">Student</a>
            </li></h1>

            <h1><li class="nav-tabs">
                <a class="nav-link" href="{{ path('course_index')}}">Course</a>
            </li></h1>

            <h1><li class="nav-tabs">
                <a class="nav-link" href="{{ path('major_index')}}">Major</a>
            </li></h1>
            <h1><li class="nav-tabs">
                <a class="nav-link" href="{{ path('teacher_index')}}">Teacher</a>
            </li></h1>
            <h1><li class="nav-tabs">
                <a class="nav-link" href="{{ path('app_feed_back')}}">FeedBack</a>
            </li></h1>
            {% if app.user.username != null %}
                <h1><li class="nav-tabs">
                    <a class="nav-link" href="{{ path('app_logout')}}">Logout <i> ({{ app.user.username }}) </i> </a>
                </li></h1>
            {% endif %}
        </ul>
        {% endblock %}
        {# show flash message #}
        {% block flash %}
        <div class="container-md col-md-5 mt-3 text-center">
            {% for message in app.session.flashBag.get('Success') %}
               <p class="alert alert-success">{{ message }}</p> 
            {% endfor %}
            {% for message in app.session.flashBag.get('Error') %}
               <p class="alert alert-danger">{{ message }}</p> 
            {% endfor %}
        </div>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>